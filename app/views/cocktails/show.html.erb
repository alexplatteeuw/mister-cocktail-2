
<div class="container">
  <div class="card-cocktail-show mt-4" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= @cocktail.photo.attached? ? cl_image_path(@cocktail.photo.key, crop: :fit) : 'https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg' %>)">
      <h1><%= @cocktail.name %></h1>
  </div>

  <div class="row d-flex flex-row align-items-around bg-white rounded shadow-sm m-0">

    <div class="col-6 d-flex justify-content-center align-items-center p-0">
      <div class="d-flex flex-column align-items-center">
        <h4>Ingrédients</h4>
        <ul class="text-center list-unstyled">
          <% @cocktail.doses.each do |dose| %>
            <li><%= dose.ingredient.name %> - <%= dose.description %> - <%= link_to dose_path(dose), method: :delete do %><i class="far fa-trash-alt"></i><% end %></li>
          <% end %>
        </ul>
      </div>
    </div>

    <div class="col-6 p-5 ">
      <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.association :ingredient, label: "Ingrédient" %>
        <%= f.input :description %>
        <%= f.button :submit, 'Ça part !', class: "btn btn-primary btn-sm" %>
      <% end %>
    </div>

  </div>
</div>
